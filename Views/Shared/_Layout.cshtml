<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarenAll</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarenAll.styles.css" asp-append-version="true" />
</head>
<body>
<header class="d-flex justify-content-between align-items-center p-3 border-bottom">
    <h1 class="h3 text-success">Rent-IT</h1>
    <nav>
        <a href="#" class="text-dark me-3">Home</a>
        <a href="#" class="text-dark me-3">Voertuigen</a>
        <a href="#" class="text-dark me-3">Abonnementen</a>
        <a href="#" class="text-dark me-3">Contact</a>
        <a href="#" class="text-dark me-3">Sign up</a>
        <a href="#" class="text-dark">&#x279C;</a>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<!-- Footer -->
<footer class="bg-light py-5">
    <div class="container text-center">
        <div class="mb-3">
            <a href="#" class="me-3"><i class="bi bi-globe"></i></a>
            <a href="#" class="me-3"><i class="bi bi-instagram"></i></a>
            <a href="#" class="me-3"><i class="bi bi-youtube"></i></a>
            <a href="#" class="me-3"><i class="bi bi-linkedin"></i></a>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h6>Use cases</h6>
                <p>UI design</p>
                <p>UX design</p>
                <p>Wireframing</p>
                <p>Diagramming</p>
                <p>Brainstorming</p>
                <p>Online whiteboard</p>
                <p>Team collaboration</p>
            </div>
            <div class="col-md-4">
                <h6>Explore</h6>
                <p>Design</p>
                <p>Prototyping</p>
                <p>Development features</p>
                <p>Design systems</p>
                <p>Collaboration features</p>
                <p>Design process</p>
                <p>FigJam</p>
            </div>
            <div class="col-md-4">
                <h6>Resources</h6>
                <p>Blog</p>
                <p>Best practices</p>
                <p>Colors</p>
                <p>Color wheel</p>
                <p>Support</p>
                <p>Developers</p>
                <p>Resource library</p>
            </div>
        </div>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
